SELECT first_name, /* 1.8 Performance Assessment    Gabriela Balamta  Question 1*/
        last_name,
        dept_code

From l_employees

WHERE dept_code IN ('SAL', 'SHP' , 'ACT');




SELECT employee_id, /* 1.8 Performance Assessment    Gabriela Balamta  Question 2*/
       first_name,
        last_name
        
From l_employees

WHERE employee_id
        BETWEEN '201'
        AND '205';





SELECT employee_id, /* 1.8 Performance Assessment    Gabriela Balamta  Question 3*/
       first_name,
        last_name
        
From l_employees

WHERE employee_id LIKE '%1%';




SELECT * /* 1.8 Performance Assessment    Gabriela Balamta  Question 4 */
      
From l_employees

WHERE manager_id IS NULL;







SELECT department_name AS dept  /* 1.8 Performance Assessment    Gabriela Balamta  Question 54 */
       
From l_departments

ORDER BY department_name ASC;

/* Alternative Way*/

SELECT department_name AS dept  /* 1.8 Performance Assessment    Gabriela Balamta  Question 5 */
       
From l_departments

ORDER BY dept ASC;  
/* dept can be used because department_name was renamed to dept. 
Meaning that the information stored in department_name is available to be called up as dept. */
